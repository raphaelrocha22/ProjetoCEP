@model List<Projeto.WEB.Areas.AreaRestrita.Models.Operador.OperadorViewModel>
@{
    ViewBag.Title = "Consultar";
    Layout = "~/Areas/AreaRestrita/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Consultar Operadores</h2>

    <div class="row">
        <div class="col-md-10">

            @if (TempData["MensagemEdicao"] != null)
            {
                <div class="alert alert-info"> <strong>@TempData["MensagemEdicao"]</strong> </div> 
            }

            @if (TempData["MensagemExclusao"] != null)
            { 
                <div class="alert alert-danger"> <strong>@TempData["MensagemExclusao"]</strong> </div>
            }


            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Operador</th>
                        <th>Data de Cadastro</th>
                        <th>Operações</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>@item.DataCadastro</td>
                            <td>
                                <a href="@item.IdOperador" class="btn btn-primary btn-sm">Atualizar</a>
                                <a href="/AreaRestrita/Operador/Excluir/@item.IdOperador" class="btn btn-danger btn-sm">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>
</div>




