@model Projeto.WEB.Areas.AreaRestrita.Models.Operador.OperadorViewModel
@{
    ViewBag.Title = "Atualizar";
    Layout = "~/Areas/AreaRestrita/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{

    <div class="container">

        <h2>Atualização de Operador</h2>
        <a href="/AreaRestrita/Operador/Consultar/">Voltar para tela de Consulta</a>
        <hr />

        <div class="row">
            <div class="col-md-4">

                @Html.LabelFor(m => m.IdOperador)
                @Html.TextBoxFor(m => m.IdOperador, new { @class = "form-control", @readonly = "readonly" })
                <br />
                
                @Html.LabelFor(m => m.Nome)
                @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", @placeholder = "Digite aqui" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Nome)</span>
                <br />

                <input type="submit" value="Atualizar" class="btn btn-primary" />
                <br /><br />

                @ViewBag.Mensagem

            </div>
        </div>
    </div>
}