@model List<Projeto.WEB.Areas.AreaRestrita.Models.CEP.CalcularLimitesViewModel>

<script type="text/javascript">
    $(document).ready(function () {

        $("#btnexclusao").click(function () {

            $.ajax({
                type: "POST",
                url: "/CEP/Excluir",
                data: "id=" + $("#exclusao_id").html(),
                success: function (msg) {
                    alert(msg);
                },
                error: function (e) {
                    $("#mensagem").html("Erro: " + e.status);
                }
            });
        });

    });

    function Consultar() {

    }

    function exibirObservacao(id) {
        $.ajax({
            type: "POST",
            url: "/CEP/ObterPorId",
            data: "id=" + id,
            success: function (model) {
                if (model.Observacao == "") {
                    $("#txtObservacao").val("Sem Observações");
                }
                else {
                    $("#txtObservacao").val(model.Observacao);
                }
            },
            error: function (e) {
                $("#txtObservacao").val("Erro: " + e);
            }
        })
    }

    function exibirExclusao(id) {
        $.ajax({
            type: "POST",
            url: "/CEP/ObterPorId",
            data: "id=" + id,
            success: function (model) {

                $("#exclusao_id").html(model.idLote);
                $("#exclusao_lote").html(model.Lote);
                $("#exclusao_DataCriacao").html(model.DataCriacao);
                $("#exclusao_OperadorCriacao").html(model.OperadorCriacaoNome);
                $("#exclusao_DataAnalise").html(model.DataAnalise);
                $("#exclusao_OperadorAnalise").html(model.OperadorAnaliseNome);
                $("#exclusao_TotalLentes").html(model.TotaLentes);
                $("#exclusao_QtdReprov").html(model.QtdNaoConforme);
                $("#exclusao_PercentReprov").html(model.Percentual);

            },
            error: function (e) {
                $("#txtObservacao").val("Erro: " + e);
            }
        })
    }


</script>

<div class="container">

    <table class="table table-hover">

        <thead>
            <tr>
                <th>
                    <style hidden>
                        Id
                    </style>
                </th>
                <th>Lote</th>
                <th>Data Criação</th>
                <th>Operador Criação</th>
                <th>Data Analise</th>
                <th>Operador Analise</th>
                <th>Total Lentes</th>
                <th>Qtd Reprov.</th>
                <th>% Reprov.</th>
                <th>Operações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <style hidden> @item.idLote </style>
                    </td>
                    <td>@item.Lote</td>
                    <td>@item.DataCriacao</td>
                    <td>@item.OperadorCriacaoNome</td>
                    <td>@item.DataAnalise</td>
                    <td>@item.OperadorAnaliseNome</td>
                    <td>@item.TotaLentes</td>
                    <td>@item.QtdNaoConforme</td>
                    <td>@item.Percentual</td>
                    <td>
                        <button data-target='#ObservacoesModal' data-toggle='modal' onclick='exibirObservacao(@item.idLote)'
                                class='btn btn-primary btn-xs'>
                            Observação
                        </button>
                    </td>
                    <td>
                        <button data-target='#ExclusaoModal' data-toggle='modal' onclick='exibirExclusao(@item.idLote)'
                                class='btn btn-danger btn-xs'>
                            Excluir
                        </button>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="6"> Quantidade de Amostras:<span id="quantidade"></span> </td>
            </tr>
        </tfoot>
    </table>

</div>

<!-- Modal Observacao -->
<div class="modal fade" id="ObservacoesModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">

                <label>Observação:</label>
                <textarea id="txtObservacao" class="form-control" readonly></textarea>

            </div>
        </div>
    </div>
</div>

<!-- Modal Exclusao -->
<div class="modal fade" id="ExclusaoModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h3>Deseja Excluir essa Amostra?</h3>
            </div>
            <div class="modal-body">

                Id: <span id="exclusao_id"></span> <br />
                Lote: <span id="exclusao_lote"></span> <br />
                Data Criação: <span id="exclusao_DataCriacao"></span> <br />
                Operador Criação: <span id="exclusao_OperadorCriacao"></span> <br />
                Data Analise: <span id="exclusao_DataAnalise"></span> <br />
                Operador Analise: <span id="exclusao_OperadorAnalise"></span> <br />
                Total Lentes: <span id="exclusao_TotalLentes"></span> <br />
                Qtd Reprov.: <span id="exclusao_QtdReprov"></span> <br />
                % Reprov.: <span id="exclusao_PercentReprov"></span> <br />

            </div>
            <div class="modal-footer">
                <button id="btnexclusao" class="btn btn-danger"
                        data-dismiss="modal">
                    Confirmar Exclusão
                </button>
            </div>
        </div>
    </div>
</div>


